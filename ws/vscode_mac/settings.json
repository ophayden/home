{
  "workbench.startupEditor": "newUntitledFile",
  "editor.renderWhitespace": "trailing",
  "editor.tabSize": 2,
  "editor.detectIndentation": false,
  // "editor.formatOnSaveMode": "modifications",
  "editor.autoClosingBrackets": "never",
  "editor.autoClosingQuotes": "never",
  "editor.guides.bracketPairs": true,
  "html.autoCreateQuotes": false,
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairsHorizontal": true,
  "search.exclude": {
    "**/node_modules": true,
    "**/__pycache__": true,
  },
	"editor.folding": false,

	"files.eol": "\n",

  // terminal stuff
  "terminal.integrated.showExitAlert": false, // hide the annoying "shell exited with non zero" notifications
  "terminal.integrated.inheritEnv": false,
  "terminal.integrated.defaultProfile.osx": "bash",
  "terminal.integrated.tabs.location": "left",

  // cpp
  "C_Cpp.intelliSenseEngine": "Tag Parser",

  // vim stuff
  "vim.leader": "<space>",
  // "vim.easymotion": true,
  "vim.incsearch": true,
  "vim.hlsearch": true,
  "vim.insertModeKeyBindings": [
    // tabs
    {
      "before": [ "<C-l>" ],
      "commands": [ "workbench.action.nextEditorInGroup" ],
    },
    {
      "before": [ "<C-h>" ],
      "commands": [ "workbench.action.previousEditorInGroup" ],
    },

    // files
    {
      "before": [ "<C-w>" ],
      "commands": [ "workbench.action.closeActiveEditor", ]
    },
    {
      "before": [ "<C-s>" ],
      "commands": [ "workbench.action.files.save", ]
    },

    // nav
    {
      "before": [ "<C-o>" ],
      "commands": [ "workbench.action.navigateBack" ],
    },
    {
      "before": [ "<C-i>" ],
      "commands": [ "workbench.action.navigateForward" ],
    },
  ],
  "vim.visualModeKeyBindings": [
    // tabs
    {
      "before": [ "<C-l>" ],
      "commands": [ "workbench.action.nextEditorInGroup" ],
    },
    {
      "before": [ "<C-h>" ],
      "commands": [ "workbench.action.previousEditorInGroup" ],
    },

    // files
    {
      "before": [ "<C-w>" ],
      "commands": [ "workbench.action.closeActiveEditor", ]
    },
    {
      "before": [ "leader", "w" ],
      "commands": [ "workbench.action.closeAllGroups", ]
    },
    {
      "before": [ "<C-s>" ],
      "commands": [ "workbench.action.files.save", ]
    },
    {
      "before": [ "leader", "s" ],
      "commands": [ "workbench.action.files.saveAll", ]
    },

    // lowercase
    {
      "before": [ "leader", "u" ],
      "commands": [ "editor.action.transformToLowercase" ]
    },
    {
      "before": [ "U" ],
      "commands": [ "editor.action.transformToUppercase" ]
    },

    // undo redo
    {
      "before": [ "u" ],
      "commands": [ "undo" ]
    },
    {
      "before": [ "<C-r>" ],
      "commands": [ "redo" ]
    },

    // // upper case lower case
    // {
    //   "before": [ "<C-u>" ],
    //   "commands": [ "editor.action.transformToLowercase" ]
    // },
    // {
    //   "before": [ "<C-U>" ],
    //   "commands": [ "editor.action.transformToUppercase" ]
    // },

    // nav
    {
      "before": [ "<C-o>" ],
      "commands": [ "workbench.action.navigateBack" ],
    },
    {
      "before": [ "<C-i>" ],
      "commands": [ "workbench.action.navigateForward" ],
    },

    // clear highlight
    {
      "before": [ "leader", "leader" ],
      "commands": [ ":nohl" ]
    },

    // formatting
    {
      "before": [ "leader", "f" ],
      "commands": [ "editor.action.format", ]
    },

    // indenting
    {
      "before": [ ">" ],
      "commands": [ "editor.action.indentLines" ]
    },
    {
      "before": [ "<" ],
      "commands": [ "editor.action.outdentLines" ]
    },
  ],
  "vim.normalModeKeyBindings": [
    // tabs
    {
      "before": [ "<C-l>" ],
